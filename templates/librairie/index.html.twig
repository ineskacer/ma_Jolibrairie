            {{ include('librairie/_delete_form.html.twig') }}
           </td>

        </tr>
    
  {% endfor %} 
  </tbody>
  {#<button class="btn-default"><a href="{{ path('librairie_new')}}">Ajouter une Jolibrairie</a></button>#}
  </table>
<button class="btn-default"><a href="{{ path('home') }}">Retour</a></button>
{% endblock %}
